{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"green",
      "labels":{
         "app":"green"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "app":"green"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"green"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"green",
                  "image":"weinanli/catnip",
                  "ports":[
                     {
                        // "name":"http-server",
                        // "containerPort":80
                        "ContainerPort": 5000,
                        "HostPort": 8000
                     }
                  ]
               }
            ]
         }
      }
   }
}